@model EforahWebapp.Models.Vereniging

@{
    ViewBag.Title = "Delete";
}

<h2>Vereniging verwijderen</h2>

<h3>Weet u zeker dat u deze vereniging wilt verwijderen?</h3>
<div>
    <h4>Vereniging</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Vereniging
        </dt>

        <dd>
            @Html.DisplayFor(model => model.naam)
        </dd>

        <dt>
            Telefoon nummer
        </dt>

        <dd>
            @Html.DisplayFor(model => model.telefoonnummer)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            Postcode
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Locatie.postcode)
        </dd>

        <dt>
            Adres
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Locatie.adres)
            @Html.DisplayFor(model => model.Locatie.huisnummer)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Verwijderen" class="btn btn-default" /> |
            @Html.ActionLink("Terug naar lijst", "Index")
        </div>
    }
</div>
