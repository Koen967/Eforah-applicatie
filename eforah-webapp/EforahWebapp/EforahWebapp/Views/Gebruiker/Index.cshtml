@model IEnumerable<EforahWebapp.Models.Gebruiker>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nieuwe gebruiker aanmaken", "Create")
</p>
<table id="dataTable" class="table display">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.gebruikersnaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.voornaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.achternaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefoonnummer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefoonnummerAlt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locatie.postcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locatie.huisnummer)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.gebruikersnaam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.voornaam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.achternaam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefoonnummer)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.telefoonnummerAlt)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Locatie.postcode)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Locatie.huisnummer)
                </td>
                <td>
                    @Html.ActionLink("Wijzigen", "Edit", new { id = item.gebruikerId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.gebruikerId }) |
                    @Html.ActionLink("Verwijderen", "Delete", new { id = item.gebruikerId })
                </td>
            </tr>
        }
        </tbody>

</table>
<button class="btn btn-info col-md-2" type="button" id="HomeButton" value="Home" style="margin-bottom:4px"
        onclick="location.href='@Url.Action("index", "Home")'">
    Home
</button>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/dataTables")
}
